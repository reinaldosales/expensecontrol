@model ExpenseControl.MVC.Models.Expense
@using ExpenseControl.MVC.Models.Enum

@{
    ViewData["Title"] = "Editar despesa";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentType" class="control-label"></label>
                <span asp-validation-for="PaymentType" class="text-danger"></span>

                <select asp-for="PaymentType" class="form-control" asp-items="Html.GetEnumSelectList<PaymentType>()">
                    <option selected="selected" value="">Selecione</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfInstallments" class="control-label"></label>
                <input asp-for="NumberOfInstallments" class="form-control" />
                <span asp-validation-for="NumberOfInstallments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItsPaid" class="control-label"></label>
                <select asp-for="ItsPaid" class="form-control">
                    <option value="select" selected>Selecione</option>
                    <option value="False">NÃ£o</option>
                    <option value="True">Sim</option>
                </select>
                <span asp-validation-for="ItsPaid" class="text-danger"></span>
            </div>
            
            <input hidden="" asp-for="User" value="@User.Identity.Name" />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
